{
  "name": "quick-react-env",
  "version": "1.0.0",
  "description": "React + TypeScript + Tailwind + ESLint + Prettier + Husky 프로젝트 초기화 도구",
  "main": "dist/index.js",
  "bin": {
    "quick-react-env": "./dist/index.js"
  },
  "type": "module",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && npm run copy-templates",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "copy-templates": "cp -r src/templates/shared dist/templates/",
    "link": "pnpm run build && pnpm link --global",
    "unlink": "pnpm unlink --global",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "react",
    "typescript",
    "tailwind",
    "eslint",
    "prettier",
    "husky",
    "cli",
    "scaffold",
    "generator",
    "boilerplate",
    "template"
  ],
  "author": "reeny404",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reeny404/react-starter-cli"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "inquirer": "^9.2.15",
    "ora": "^8.0.1",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.15.21",
    "typescript": "~5.8.3"
  }
}
